<AdicionarVendasPage>:
    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"

        #selecionar cliente

        Label:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.05
            text: "Selecione o Cliente"
            id: selecione_clientes
        ScrollView:
            pos_hint: {"right": 1, "top": 0.95}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_clientes
                size_hint_x: None
                spacing: 2, 2
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True

        #selecione o produto

        Label:
            pos_hint: {"right": 1, "top": 0.75}
            size_hint: 1, 0.05
            text: "Selecione o Produto"
            id: selecione_produto
        ScrollView:
            pos_hint: {"right": 1, "top": 0.7}
            size_hint: 1, 0.15
            GridLayout:
                rows: 1
                id: lista_produtos
                size_hint_x: None
                spacing: 2, 2
                width: self.minimum_width
                col_default_width: "100dp"
                col_force_default: True
        Label:
            id: label_data
            pos_hint: {"right": 1, "top": 0.5}
            size_hint: 1, 0.05
            bold: True
            text: "Data: 01/01/2022"

        #Selecionar a Unidade
        GridLayout:
            pos_hint: {"right": 0.9, "top": 0.45}
            size_hint: 0.8, 0.1
            rows: 1
            LabelButton:
                text: "Kg"
                id: unidade_kg
                on_release: app.selecionar_unidade("unidade_kg")
            LabelButton:
                text: "Unidades"
                id: unidade_unidades
                on_release: app.selecionar_unidade("unidade_unidades")
            LabelButton:
                text: "Litros"
                id: unidade_litros
                on_release: app.selecionar_unidade("unidade_litros")

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            text: "Cancelar"
            on_release: app.mudar_tela("homepage")
            pos_hint: {"right": 0.45 , "top": 0.2}
            size_hint: 0.4, 0.2

        LabelButton:
            canvas.before:
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == "normal" else "icones/botao_apertado.png"
            text: "Adicionar Venda"
            on_release: app.adicionar_venda()
            pos_hint: {"right": 0.95 , "top": 0.2}
            size_hint: 0.4, 0.2

        #Preço Total
        GridLayout:
            pos_hint: {"right": 0.9, "top": 0.355}
            size_hint: 0.8, 0.075
            rows: 1
            Label:
                text: "Preço Total: (R$)"
                id: label_preco
            TextInput:
                id: preco_total
                hint_text: "Digite Apenas Numeros"


        #Quantidade Total
        GridLayout:
            pos_hint: {"right": 0.9, "top": 0.275}
            size_hint: 0.8, 0.075
            rows:1
            Label:
                text: "Quantidade Total:"
                id: label_quantidade
            TextInput:
                id: quantidade
                hint_text: "0"





